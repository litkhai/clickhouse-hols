# LibreChat Configuration
LIBRECHAT_PORT=3080

# Security secrets (필수 - 아래 명령어로 생성하세요)
# openssl rand -hex 32
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# Encryption keys for v0.7.6+ (필수 - 아래 명령어로 생성하세요)
# openssl rand -hex 32
CREDS_KEY=your_creds_key_here
# openssl rand -hex 16
CREDS_IV=your_creds_iv_here

# Ollama Settings
OLLAMA_BASE_URL=http://host.docker.internal:11434
PRIMARY_MODEL=llama3.1:8b

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# MCP Server Authentication (선택사항)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# MCP 서버에 인증이 필요한 경우 아래 환경변수를 설정하세요
# librechat.yaml에서 ${MCP_API_TOKEN} 형식으로 참조할 수 있습니다

# Bearer Token 인증
# MCP_API_TOKEN=your-bearer-token-here

# API Key 인증
# MCP_CUSTOM_API_KEY=your-api-key-here
# MCP_CUSTOM_API_SECRET=your-api-secret-here

# Basic Auth 인증 (Base64 인코딩)
# 생성 방법: echo -n "username:password" | base64
# MCP_BASIC_AUTH_TOKEN=your-base64-encoded-credentials

# 여러 MCP 서버용 토큰
# POSTGRES_MCP_TOKEN=postgres-server-token
# EXTERNAL_API_KEY=external-api-key
