# AWS Configuration
# Note: AWS credentials should be set via environment variables:
#   export AWS_ACCESS_KEY_ID="your-access-key"
#   export AWS_SECRET_ACCESS_KEY="your-secret-key"
#   export AWS_SESSION_TOKEN="your-session-token"  # Optional, for temporary credentials
#
# AWS Region (optional):
#   If not specified here, uses AWS_REGION or AWS_DEFAULT_REGION environment variable
#   If no environment variable is set, defaults to us-east-1
# aws_region = "us-west-2"

# EC2 Configuration
instance_name   = "minio-server"
instance_type   = "c5.xlarge"
ebs_volume_size = 250

# SSH Key Pair (optional)
# If not set, SSH access will not be available
# Uncomment and set to your EC2 key pair name if you need SSH access
# key_pair_name = "YOUR_KEY_PAIR_NAME"

# Network Configuration
# Allows access from any IP address (public endpoint)
# For production, consider restricting to specific IPs (e.g., ["1.2.3.4/32"])
allowed_cidr_blocks = ["0.0.0.0/0"]
use_elastic_ip      = false  # Set to true for production to get stable IP

# MinIO Configuration
# IMPORTANT: MinIO requires password to be at least 8 characters
minio_root_user     = "admin"
minio_root_password = "minioadmin"  # Must be at least 8 characters
minio_data_dir      = "/mnt/data"
